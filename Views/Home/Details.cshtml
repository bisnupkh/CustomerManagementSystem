@model Customer
<div class="row mt-3">
    <div class="col-md-10">
        <div class="card">
            <div class="card-header">
                <h5 class="card-text">Customer Detail</h5>
            </div>
            <div class="card-body">
                <strong>Customer Id:</strong> @Model.Customer_Id
                <br/>
               <strong>Customer Name:</strong> @Model.Customer_Name 
               <br/>
               <strong>Customer Email:</strong> @Model.Customer_Email
               <br/>
                <strong>Customer Phone:</strong> @Model.Customer_Name
            </div>
            <div class="card-footer d-flex">
                <a class="btn btn-primary me-2" asp-action="EditUser" asp-route-Id="@Model.Customer_Id " style="width:80px;">Edit</a>
                <form method="post">

               
                <a class="btn btn-danger me-2" asp-action="Delete" asp-route-Id="@Model.Customer_Id">Delete</a>

                </form>
                <a asp-action="Index" class="btn btn-success">Cancel</a>
            </div>
        </div>
    </div>
</div>
