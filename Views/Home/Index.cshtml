@model IEnumerable<Customer>
<div class="row mt-3">
    @{
        if(TempData["Message"]!=null)
        {
            <div class="alert alert-primary alert-dismissible fade show" role="alert">
                @TempData["Message"]
                <button type="button" class="btn-close" data-bs-dismiss="alert">
                    
                </button>
            </div>

        }
    }
    <div class="col-md-12 col-sm-12 col-lg-6 col-12 offset-lg-3 table-responsive-sm table-responsive-lg table-responsive-md">
        <div>

        
        <table class="tabel table-bordered table-dark bg-dark text-center ">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Customer Email</th>
                    <th>Customer Phone</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Any())
                    {
                        foreach (var customer in Model)
                        {



                            <tr>
                                <td>@customer.Customer_Name</td>
                                <td>@customer.Customer_Email</td>
                                <td>@customer.Customer_Phone</td>
                                
                              <td class=" d-flex ">
                                    <a asp-action="EditUser" asp-route-id="@customer.Customer_Id" class="btn btn-warning  me-2 text-center" style="width:80px;">Edit</a>
                              
                                  <a asp-action="Details" asp-route-Id="@customer.Customer_Id" class="btn btn-primary me-2">Details</a>
                                  <form asp-action="DeleteUser" asp-route-id="@customer.Customer_Id" method="get">
                                  <button class="btn btn-danger" type="submit">Delete</button>
                              </form>  
                              
                              
                              </td>

                               
                            </tr>
                        }

                    }
                </tbody>
        </table>
        </div>
    </div>
</div>
        



